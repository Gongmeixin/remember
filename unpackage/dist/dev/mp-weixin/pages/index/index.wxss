
.statusBar,
	.navBar {
		background-color: #2979ff;
}
.navBar {
		height: 2.75rem;
}
.navBarBox .navBar {
		padding: 3rpx 45rpx;
		padding-bottom: 8rpx;
		display: flex;
		flex-direction: row;
		align-items: center;
}
.navTitle {
		font-size: 1rem;
		font-weight: 700;
}
.pagebody {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
}
.imgbox {
		background-color: #dcdcdc;
		z-index: 0;
}
.bodyImg {
		width: 100%;
}
.bottomView {
		width: 100%;
		border-radius: 1.5625rem 1.5625rem 0 0;
		z-index: 1;
		height: 18.75rem;
		background-color: #94bcff;
		position: absolute;
}
.button-box{
		width: 100%;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-around;
		position: absolute;
		z-index: 999;
}
.mbutton {
		background-color: #2979ff;
		color: white;
		width: 100px;
		height: 100px;
		text-align: justify;
}
